{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "app/**/*",
    "typings/*.d.ts"
  ],
  "exclude": [
    "**/*.spec",
    "app/out/**",
    "app/.next/**"
  ]
}
